{
  "name": "@bemoid/bemoid",
  "version": "0.1.0",
  "description": "A component-oriented CSS framework based on BEM convention and OOCSS methodology",
  "main": "scss/bemoid.scss",
  "scripts": {
    "transform": "node build/apply.transformations.js -i css/bemoid.css -o css/bemoid.css",
    "extract": "npm run extract:variables && npm run extract:imports",
    "extract:variables": "node build/extract.variables.js -i scss/**/_variables.scss -o json/variables.json",
    "extract:imports": "node build/extract.imports.js -i scss/bemoid.scss -o json/imports.json",
    "compile": "node-sass scss/bemoid.scss > css/bemoid.css",
    "minify": "cssnano < css/bemoid.css > css/bemoid.min.css",
    "test:accessibility": "a11y html/**/*.html",
    "test": "npm run test:accessibility",
    "build": "npm run compile && npm run extract && npm run transform",
    "build:production": "npm run build && npm run minify",
    "publish": "npm run build:production && lerna publish"
  },
  "keywords": [
    "framework",
    "bem",
    "oocss",
    "css",
    "sass"
  ],
  "author": "Jędrzej Chałubek",
  "license": "MIT",
  "devDependencies": {
    "a11y": "^0.5.0",
    "async": "^2.5.0",
    "autoprefixer": "^6.7.7",
    "cssnano-cli": "^1.0.5",
    "glob-fs": "^0.1.7",
    "lerna": "^2.2.0",
    "node-sass": "^4.5.2",
    "postcss-cli": "^3.1.1",
    "postcss-import": "^10.0.0",
    "postcss-partial-import": "^4.1.0",
    "postcss-scss": "^1.0.2",
    "yargs": "^8.0.2"
  },
  "config": {
    "paths": {
      "schemas": "json",
      "markups": "html"
    },
    "schemas": [
      "imports",
      "variables"
    ]
  }
}
