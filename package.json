{
  "name": "@bemoid/bemoid",
  "version": "1.0.0",
  "description": "A components based CSS framework which follows the OOCSS and BEM principles",
  "main": "scss/bemoid.scss",
  "scripts": {
    "compile": "node-sass scss/bemoid.scss > css/bemoid.css",
    "minify": "cssnano < css/bemoid.css > css/bemoid.min.css",
    "transform": "postcss css/bemoid.css -o css/bemoid.css",
    "build": "npm run compile && npm run transform",
    "build:production": "npm run build && npm run minify",
    "watch": "npm run compile -- --watch"
  },
  "keywords": [
    "framework",
    "bem",
    "oocss",
    "css",
    "sass"
  ],
  "author": "Jędrzej Chałubek",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "cssnano-cli": "^1.0.5",
    "node-sass": "^4.5.2",
    "normalize.css": "^6.0.0",
    "postcss-bem-linter": "^2.7.0",
    "postcss-cli": "^3.1.1",
    "postcss-csso": "^2.0.0"
  }
}
