{
  "name": "@bemoid/bemoid",
  "version": "1.0.0",
  "description": "A components based CSS framework which follows the OOCSS and BEM principles.",
  "main": "scss/bemoid.scss",
  "scripts": {
    "extract": "node build/extract.variables.js -i scss/_variables.scss -o json/variables.json",
    "compile": "node-sass scss/bemoid.scss > css/bemoid.css",
    "transform": "node build/transform.css.js -i css/bemoid.css -o css/bemoid.css",
    "minify": "cssnano < css/bemoid.css > css/bemoid.min.css",

    "test:accessibility": "a11y html/**/*.html",
    "test": "npm run test:accessibility",

    "build": "npm run compile && npm run extract && npm run transform",
    "build:production": "npm run build && npm run minify",
    "watch": "npm run compile -- --watch"
  },
  "keywords": [
    "framework",
    "bem",
    "oocss",
    "css",
    "sass"
  ],
  "author": "Jędrzej Chałubek",
  "license": "MIT",
  "devDependencies": {
    "a11y": "^0.5.0",
    "autoprefixer": "^6.7.7",
    "cssnano-cli": "^1.0.5",
    "node-sass": "^4.5.2",
    "postcss-cli": "^3.1.1",
    "postcss-import": "^10.0.0",
    "postcss-partial-import": "^4.1.0",
    "postcss-scss": "^1.0.2",
    "yargs": "^8.0.2"
  }
}
